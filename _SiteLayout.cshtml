<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/themes/dot-luv/jquery-ui-1.10.4.custom.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"</script>
    <script type="text/javascript" src="~/Scripts/mds.templateconverter.js"</script>

    <style>
        .centre {
            margin: 0 auto;
            display: block;
        }

        .clear {
            clear: both;
            float: left;
        }

        #toolbar {
            padding: 4px;
            display: inline-block;
        }

        body {
            background-color: #111111;
        }

        textarea {
            width: 100%;
            height: 100%;
            position: relative;
            bottom: 0;
        }

        .dip {
            height: 100%;
        }

        #tabs {
            position: absolute;
            left: 0;
            bottom: 0;
            right: 0;
            top: 0;
        }

        #toolbar {
            width: 100%;
        }

        #convert {
            cursor: pointer;
        }

        div.tabcontent {
            height: 100%;
        }

        .green {
            background-color: #070;
        }
    </style>





</head>
<body>
    <div id="body">

        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>